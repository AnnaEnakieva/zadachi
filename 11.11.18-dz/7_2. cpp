6)#include <iostream>
#include <math.h>

using namespace std;
int main()
{
	int n;
	double k;

	cin >> n;
	if (n<=0)
	{
		cout<< "введено неправильно число";
	}
	else if (n<=3)
	{
		cout << n;
	}
	else if (n%3==0)
	{
		k=n/3;
		cout << pow(3,k);
	}
	else if ((n-1)%3==0)
	{
		k=(n-1)/3;
		cout << (2*2*pow(3,(k-1)));
	}
	else if ((n-2)%3==0)
	{
		k=(n-2)/3;
		cout << (2*pow(3,(k)));
	}
	return 0;
}

2)#include <iostream>
using namespace std;
int main()
{
    int n, sum;
    cin >> n;
    sum=0;
    while (n>0)
    {
        int k;
        k=n%10;
        if (k%2!=0)
        {
            sum = sum + k;
        }
        n=n/10;
    }
    cout << sum;
    return 0;
}

